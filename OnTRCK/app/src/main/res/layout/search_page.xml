<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="512dp">

        <EditText
            android:id="@+id/event_input"
            android:layout_width="130dp"
            android:layout_height="55dp"
            android:layout_marginTop="181dp"
            android:ems="10"
            android:inputType="textCapWords"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/search_button"
            android:layout_toEndOf="@+id/search_button" />

        <TextView
            android:id="@+id/enter_event_label"
            android:layout_width="130dp"
            android:layout_height="35dp"
            android:text="Enter event name"
            android:textSize="24sp"
            android:layout_above="@+id/search_button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="33dp"
            android:layout_marginStart="33dp"
            android:layout_toLeftOf="@+id/event_input"
            android:layout_toStartOf="@+id/event_input" />

        <Button
            android:id="@+id/search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_input"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="58dp"
            android:text="Search" />
    </RelativeLayout>
</LinearLayout>
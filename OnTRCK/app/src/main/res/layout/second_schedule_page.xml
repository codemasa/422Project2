<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="512dp">


        <TextView
            android:id="@+id/enter_event_label"
            android:layout_width="130dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/time_input"
            android:layout_marginTop="34dp"
            android:text="Event Name"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/event_input"
            android:layout_width="130dp"
            android:layout_height="55dp"
            android:layout_alignBottom="@+id/enter_event_label"
            android:layout_marginLeft="26dp"
            android:layout_marginStart="26dp"
            android:layout_toEndOf="@+id/enter_event_label"
            android:layout_toRightOf="@+id/enter_event_label"
            android:ems="10"
            android:inputType="textCapWords" />

        <TimePicker
            android:id="@+id/time_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:timePickerMode="clock" />

        <Button
            android:id="@+id/submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/enter_event_label"
            android:layout_marginTop="27dp"
            android:layout_toEndOf="@+id/enter_event_label"
            android:layout_toRightOf="@+id/enter_event_label"
            android:text="Submit" />


    </RelativeLayout>
</LinearLayout>